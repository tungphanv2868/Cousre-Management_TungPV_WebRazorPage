@page
@model CousreManagement_TungPV_WebRazorPage.Pages.Sections.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Section</h1>
<form method="post" class="spaceBody">
    Search Name:
    <input type="text" name="SearchKey" />
    <input type="submit" value="Search" />
</form>
<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Section[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Section[0].AttendanceId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Section[0].Course)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Section[0].Instructor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Section) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AttendanceId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Instructor.Id)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
