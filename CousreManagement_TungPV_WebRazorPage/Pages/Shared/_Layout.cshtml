<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CousreManagement_TungPV_WebRazorPage</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CousreManagement_TungPV_WebRazorPage.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">CousreManagement_TungPV_WebRazorPage</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (Context.Session.GetString("ROLE") == "AD")
                        {
                            <li class="nav-item changeColor">
                                <a class="nav-link text-dark " asp-area="" asp-page="/Semeters/Index">Semeters</a>
                            </li>
                            <li class="nav-item changeColor">
                                <a class="nav-link text-dark " asp-area="" asp-page="/Majors/Index">Majors</a>
                            </li>
                            <li class="nav-item changeColor">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Subjects/Index">Subjects</a>
                            </li>
                            <li class="nav-item changeColor">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Instructors/Index">Instructors</a>
                            </li>
                            <li class="nav-item changeColor">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Students/Index">Student</a>
                            </li>
                             <li class="nav-item changeColor">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Courses/Index">Course</a>
                            </li>
                            <li class="nav-item changeColor">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Enrollments/Index">Enrollments</a>
                            </li>
                            <li class="nav-item changeColor">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Sections/Index">Sections</a>
                            </li>
                            <li class="nav-item changeColor">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Attendances/Index">Attendance</a>
                            </li>

                            <li class="nav-item changeColor">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item changeColor">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Index">Login</a>
                            </li>
                            <li class="nav-item changeColor">
                                <a class="nav-link text-dark" asp-area="" asp-page="/PageCustomer/Create">Sign up</a>
                            </li>
                        }
                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - CousreManagement_TungPV_WebRazorPage - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>